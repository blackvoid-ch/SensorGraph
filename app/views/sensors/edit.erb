<div class="mdl-card mdl-shadow--6dp" style="margin:auto;">
  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
    <h2 class="mdl-card__title-text">Edit Sensor</h2>
  </div>
  <%= render 'form' %>

  <%= link_to ('<i class="material-icons">delete</i>').html_safe, sensor_path(@sensor),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: 'mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent mdl-floating-button' %>
</div>